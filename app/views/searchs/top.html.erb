   <% if params[:search].present? %>
     <% if params[:model] == "user" %>
      <% @users.each do |f| %>
        <div class="col-md-8 offset-md-1">
         <h2>User</h2>
         <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
             <td><%= image_tag f.get_profile_image, size: '100x100' %></td>
             <td><%= f.name %></td>
             <td></td>
            </tr>
          </tbody>
         </table>
        <% end %>
    </div>
   <div class="row">
       <% elsif params[:model] == "book"%>
         <div class="col-md-8 offset-md-1">
           <h2>Book</h2>
             <% @books.each do |f| %>
               <table class="table">
                <thead>
                  <tr>
                    <th></th>
                    <th>title</th>
                    <th>opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= image_tag f.user.get_profile_image, size: '100x100' %></td>
                    <td><%= f.title %></td>
                    <td><%= f.body %></td>
                    <td></td>
                    </tr>
                </tbody>
               </table>
             <% end %>
           </div>
        </div>
        <% end %>
   
<% else %>
<h1>検索結果は存在しません</h1>
<% end %>
